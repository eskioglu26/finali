        self.radioButton.setEnabled(False)
        self.radioButton_2.setEnabled(False)
        self.radioButton_3.setEnabled(False)
        self.radioButton_4.setEnabled(False)
        self.comboBox.setEnabled(False)

        # Status label text'i için değişiklik yapalım
        self.label_3.setText("Status")

        # Radio buttonların group olması için button group tanımla
        self.buttonGroup = QtWidgets.QButtonGroup()
        self.buttonGroup.addButton(self.radioButton)
        self.buttonGroup.addButton(self.radioButton_2)
        self.buttonGroup.addButton(self.radioButton_3)
        self.buttonGroup.addButton(self.radioButton_4)

        # İşlevleri bağla
        self.pushButton.clicked.connect(self.generate_numbers)
        self.buttonGroup.buttonClicked.connect(self.toggle_selected)
        self.comboBox.currentIndexChanged.connect(self.sort_order_changed)

        # Listeyi tutmak için
        self.numbers = []

    def generate_numbers(self):
        # 40 adet 0-100 arası rastgele sayı üret
        self.numbers = [random.randint(0, 100) for _ in range(40)]
        self.textEdit.setPlainText(str(self.numbers))

        # Toggle butonları ve comboBox'u etkinleştir
        self.radioButton.setEnabled(True)
        self.radioButton_2.setEnabled(True)
        self.radioButton_3.setEnabled(True)
        self.radioButton_4.setEnabled(True)
        self.comboBox.setEnabled(False)  # Sort seçilmedikçe pasif

        # Status label güncelle
        self.label_3.setText("Numbers are generated")

        # Sonuç textbox'ı temizle
        self.textEdit_2.clear()

        # Radio butonların seçimini temizle
        self.buttonGroup.setExclusive(False)
        for btn in self.buttonGroup.buttons():
            btn.setChecked(False)
        self.buttonGroup.setExclusive(True)

    def toggle_selected(self):
        # Hangi radio button seçiliyse işlemi yap
        if not self.numbers:
            return

        checked_btn = self.buttonGroup.checkedButton()
        if checked_btn is None:
            return

        btn_text = checked_btn.text().lower()

        if btn_text == "max":
            max_num = max(self.numbers)
            self.textEdit_2.setPlainText(str(max_num))
            self.label_3.setText("Maximum number is determined")
            self.comboBox.setEnabled(False)

        elif btn_text == "min":
            min_num = min(self.numbers)
            self.textEdit_2.setPlainText(str(min_num))
            self.label_3.setText("Minimum number is determined")
            self.comboBox.setEnabled(False)

        elif btn_text == "sort":
            # ComboBox'u aktif et
            self.comboBox.setEnabled(True)
            # Sort işlemini comboBox'ın seçimine göre yap
            self.sort_numbers()

        elif btn_text == "reverse":
            reversed_list = list(reversed(self.numbers))
            self.textEdit_2.setPlainText(str(reversed_list))
            self.label_3.setText("Numbers are reversed")
            self.comboBox.setEnabled(False)

    def sort_order_changed(self):
        # Sadece "Sort" seçiliyken çalıştır
        if self.radioButton_3.isChecked():
            self.sort_numbers()

    def sort_numbers(self):
        ascending = (self.comboBox.currentText() == "Ascending")
        sorted_list = sorted(self.numbers, reverse=not ascending)
        self.textEdit_2.setPlainText(str(sorted_list))

        if ascending:
            self.label_3.setText("Numbers are sorted in ascending order")
        else:
            self.label_3.setText("Numbers are sorted in descending order")
            
            
