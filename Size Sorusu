class MainApp(QMainWindow, Ui_MainWindow):
    def __init__(self):
        super().__init__()
        self.setupUi(self)
        self.UpdateText.clicked.connect(self.update_text_label)

    def update_text_label(self):
        text = self.lineEdit.text()
        try:
            font_size = int(text) if text.isdigit() else 12
        except:
            font_size = 12

        font = QFont()
        font.setPointSize(font_size)
        font.setBold(self.Bold.isChecked())
        font.setItalic(self.Italic.isChecked())
        font.setUnderline(self.Underline.isChecked())
        font.setStrikeOut(self.Strikeout.isChecked())

        self.label.setFont(font)

        color = self.comboBox.currentText().lower()
        self.label.setStyleSheet(f"color: {color};")
        self.label.setText(text)


if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = MainApp()
    window.show()
    sys.exit(app.exec_())
