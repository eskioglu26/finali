class HesapMakinesi(QtWidgets.QMainWindow):
    def __init__(self):
        super().__init__()
        self.ui = Ui_MainWindow()
        self.ui.setupUi(self)
        self.expression = ""
        self.char_count = 0
        self.connect_buttons()

    def connect_buttons(self):
        self.ui.pushButton.clicked.connect(lambda: self.button_clicked("1"))
        self.ui.pushButton_2.clicked.connect(lambda: self.button_clicked("2"))
        self.ui.pushButton_3.clicked.connect(lambda: self.button_clicked("3"))
        self.ui.pushButton_4.clicked.connect(lambda: self.button_clicked("+"))

        self.ui.pushButton_5.clicked.connect(lambda: self.button_clicked("4"))
        self.ui.pushButton_7.clicked.connect(lambda: self.button_clicked("5"))
        self.ui.pushButton_8.clicked.connect(lambda: self.button_clicked("6"))
        self.ui.pushButton_6.clicked.connect(lambda: self.button_clicked("-"))

        self.ui.pushButton_9.clicked.connect(lambda: self.button_clicked("7"))
        self.ui.pushButton_11.clicked.connect(lambda: self.button_clicked("8"))
        self.ui.pushButton_12.clicked.connect(lambda: self.button_clicked("9"))
        self.ui.pushButton_10.clicked.connect(lambda: self.button_clicked("*"))

        # Display alanı
        self.display = QtWidgets.QLineEdit(self)
        self.display.setGeometry(70, 200, 397, 40)
        self.display.setAlignment(QtCore.Qt.AlignRight)
        self.display.setReadOnly(True)

    def button_clicked(self, char):
        self.expression += char
        self.char_count += 1
        self.display.setText(self.expression)

        # 3 karaktere ulaşıldığında işlem yapılır (örnek: 2+3)
        if self.char_count == 3:
            try:
                result = str(eval(self.expression))
                self.display.setText(result)
                self.expression = result  # Sonuçla devam etmek istersen bunu yap
                self.char_count = len(result)  # Eğer sonuç birden çok hane ise onunla devam
            except Exception:
                self.display.setText("Hata")
                self.expression = ""
                self.char_count = 0


if __name__ == "__main__":
    import sys
    app = QtWidgets.QApplication(sys.argv)
    pencere = HesapMakinesi()
    pencere.show()
    sys.exit(app.exec_())
